## BackwardExtendToOne(engine, import, body, chain)
${import.getImportedName($chain.getValue().getOperation().getType().getTypes().get(0))} #if(${chain.getValue().getOperation().getPostcondition().get(0)} == 1)tmp${chain.getValue().getOperation().getUpperCaseName($chain.getValue().getOperation().getParameters().get(0).getSpecification().getName())}#{else}${chain.getValue().getOperation().getLowerCaseName($chain.getValue().getOperation().getParameters().get(0).getSpecification().getName())}#{end} = ${chain.getValue().getOperation().getParameters().get(1).getSpecification().getName()}.${chain.getValue().getOperation().getType().getBackwardMethod()};
${engine.getTemplate($chain.getNext().getValue().getTemplate(), "engine", "import", "body", "chain").apply($engine, $import, $body, $chain.getNext())}